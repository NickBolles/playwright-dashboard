{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/web-ui/src/*"],
      "@job-runner/*": ["packages/job-runner/src/*"],
      "@orchestrator/*": ["packages/orchestrator/src/*"],
      "@playwright-orchestrator/shared": ["packages/shared/src/index"]
    }
  }
}
